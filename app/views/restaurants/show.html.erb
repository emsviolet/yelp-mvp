<div class="banner">
  <div class="banner-content">
    <h1><%= @restaurant.name %></h1>
  </div>
</div>
<div class="container">
  <div class="card-product">
    <img src="https://images.unsplash.com/photo-1602253057119-44d745d9b860?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1452&q=80" alt="restaurant">
      <div class="card-product-infos">
        <h4><%= @restaurant.category.capitalize %></h4>
          <p><%= @restaurant.address %></p>
          <p><%= @restaurant.phone_number %></p>
      </div>
    </div>
    <br>
    <div class="reviews">
      <h3>Reviews <span><i class="fas fa-star" style="color: red"></i></span></h3>
      <ul class="review-list">
        <% @restaurant.reviews.each do |review| %>
          <li><%= review.content %> | <span><%= review.rating %> ⭐️ | </span></li>
        <% end %>
      </ul>
  </div>
  <div class="buttons">
    <%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-info" %>
    <%= link_to "Back to list", restaurants_path, class: "btn btn-danger" %>
  </div>
</div>
